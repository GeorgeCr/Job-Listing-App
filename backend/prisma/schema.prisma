// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Prisma schema

model Users {
  id            String       @id @default(uuid())
  role          String
  username      String
  passwordHash  String
  firstName     String
  lastName      String
  hobbies       String
  lastEducation String
  UserSkills    UserSkills[]
  Feedback      Feedback[]
  UserJobs      UserJobs[]
}

model UserSkills {
  user_id   String
  skill_id  String
  user      Users  @relation(fields: [user_id], references: [id])
  skill     Skills @relation(fields: [skill_id], references: [id])
  seniority String

  @@id([user_id, skill_id])
}

model Skills {
  id         String       @id @default(uuid())
  name       String
  JobSkills  JobSkills[]
  UserSkills UserSkills[]
}

model Feedback {
  id      String @id @default(uuid())
  type    String
  content String
  userId  String
  jobId   String
  user    Users  @relation(fields: [userId], references: [id])
  job     Jobs   @relation(fields: [jobId], references: [id])
}

model UserJobs {
  user_id String
  job_id  String
  user    Users  @relation(fields: [user_id], references: [id])
  job     Jobs   @relation(fields: [job_id], references: [id])

  @@id([user_id, job_id])
}

model Jobs {
  id              String        @id @default(uuid())
  description     String
  applicantsCount Int
  companyId       String
  Feedback        Feedback[]
  UserJobs        UserJobs[]
  JobBenefits     JobBenefits[]
  JobSkills       JobSkills[]
  company         Companies     @relation(fields: [companyId], references: [id])
}

model JobBenefits {
  job_id     String
  benefit_id String
  job        Jobs     @relation(fields: [job_id], references: [id])
  benefit    Benefits @relation(fields: [benefit_id], references: [id])

  @@id([job_id, benefit_id])
}

model JobSkills {
  job_id   String
  skill_id String
  job      Jobs   @relation(fields: [job_id], references: [id])
  skill    Skills @relation(fields: [skill_id], references: [id])

  @@id([job_id, skill_id])
}

model Benefits {
  id          String        @id @default(uuid())
  description String
  JobBenefits JobBenefits[]
}

model Companies {
  id       String @id @default(uuid())
  name     String
  location String
  Jobs     Jobs[]
}
