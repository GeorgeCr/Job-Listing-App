// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Prisma schema

model Users {
  id            String       @id @default(uuid())
  role          String
  username      String
  firstName     String
  lastName      String
  hobbies       String
  lastEducation String
  skills        UserSkills[]
  feedbacks     Feedbacks[]
  jobs          Jobs[]
}

model UserSkills {
  id        String @id @default(uuid())
  name      String
  user      Users  @relation(fields: [userId], references: [id])
  seniority String
  userId    String
}

model JobSkills {
  id        String @id @default(uuid())
  name      String
  seniority String
  Jobs      Jobs   @relation(fields: [jobsId], references: [id])
  jobsId    String
}

model Feedbacks {
  id      String @id @default(uuid())
  type    String
  content String
  userId  String
  jobId   String
  user    Users  @relation(fields: [userId], references: [id])
  job     Jobs   @relation(fields: [jobId], references: [id])
}

model Jobs {
  id              String      @id @default(uuid())
  title           String
  description     String
  applicantsCount Int
  feedbacks       Feedbacks[]
  users           Users[]
  benefits        Benefits[]
  skills          JobSkills[]
  company         Companies?
}

model Benefits {
  id          String @id @default(uuid())
  description String
  jobs        Jobs   @relation(fields: [jobId], references: [id])
  jobId       String
}

model Companies {
  id       String @id @default(uuid())
  name     String
  location String
  jobId    String @unique
  jobs     Jobs   @relation(fields: [jobId], references: [id])
}
